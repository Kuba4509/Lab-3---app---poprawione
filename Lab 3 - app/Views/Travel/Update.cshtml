@{
}

<h1>Edytuj podróż</h1>
<form asp-controller="Travel" asp-action="Update" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Name">Nazwa</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate">Data rozpoczęcia</label>
        <input type="date" class="form-control" asp-for="StartDate" />
        <span class="text-danger" asp-validation-for="StartDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate">Data zakończenia</label>
        <input type="date" class="form-control" asp-for="EndDate" />
        <span class="text-danger" asp-validation-for="EndDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartingLocation">Lokacja początkowa</label>
        <input class="form-control" asp-for="StartingLocation" />
        <span class="text-danger" asp-validation-for="StartingLocation"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndingLocation">Lokacja końcowa</label>
        <input class="form-control" asp-for="EndingLocation" />
        <span class="text-danger" asp-validation-for="EndingLocation"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Participants">Uczestnicy</label>
        <input class="form-control" asp-for="Participants" />
        <span class="text-danger" asp-validation-for="Participants"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Guide">Przewodnik</label>
        <input class="form-control" asp-for="Guide" />
        <span class="text-danger" asp-validation-for="Guide"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <button class="btn btn-secondary" type="reset">Wyczyść</button>
    </div>
</form>
