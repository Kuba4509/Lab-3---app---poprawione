
@model Dictionary<int, Travel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista podróży</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Travel" asp-action="Create">Dodaj podróż</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nazwa podróży
                </th>
                <th>
                    Data rozpoczęcia
                </th>
                <th>
                    Data zakończenia
                </th>
                <th>
                    Lokacja początkowa
                </th>
                <th>
                    Lokacja końcowa
                </th>
                <th>
                    Uczestnicy
                </th>
                <th>
                    Przewodnik
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Value.Name
                    </td>
                    <td>
                        @item.Value.StartDate.ToShortDateString()
                    </td>
                    <td>
                        @item.Value.EndDate.ToShortDateString()
                    </td>
                    <td>
                        @item.Value.StartingLocation
                    </td>
                    <td>
                        @item.Value.EndingLocation
                    </td>
                    <td>
                        @item.Value.Participants
                    </td>
                    <td>
                        @item.Value.Guide
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
